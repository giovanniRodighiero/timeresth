{
    "compilerOptions": {
        "types": ["vitest/globals"],
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "checkJs": true,
        "allowJs": true,
        "noEmit": true,
        "skipLibCheck": true,
        "strictNullChecks": true
